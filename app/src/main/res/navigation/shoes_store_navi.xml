<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shoes_store_navi"
    app:startDestination="@id/signUpFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.udacity.shoestore.presentation.fragment.SignUpFragment"
        android:label="@string/authorization_fragment_title" >
        <action
            android:id="@+id/signUpFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.udacity.shoestore.presentation.fragment.OnboardingFragment"
        android:label="@string/onboarding_fragment_title" >
        <action
            android:id="@+id/onboardingFragment_to_shoesListFragment"
            app:destination="@id/shoesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/shoesListFragment"
        android:name="com.udacity.shoestore.presentation.fragment.ShoesListFragment"
        android:label="@string/shoe_list_fragment_title" >
        <action
            android:id="@+id/shoesListFragment_to_shoeDetailFragment"
            app:destination="@id/shoeDetailFragment"
            app:popUpTo="@id/shoesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/shoeDetailFragment"
        android:name="com.udacity.shoestore.presentation.fragment.ShoeDetailFragment"
        android:label="@string/shoe_detail_fragment_title" >
        <argument
            android:name="shoeDetail"
            app:argType="com.udacity.shoestore.domain.models.Shoe"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.udacity.shoestore.presentation.fragment.WelcomeFragment"
        android:label="@string/welcome_fragment_title" >
        <action
            android:id="@+id/welcomeFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment" />
        <action
            android:id="@+id/welcomeFragment_to_shoesListFragment"
            app:destination="@id/shoesListFragment" />
        <argument
            android:name="login"
            app:argType="string"
            app:nullable="false"/>
        <argument
            android:name="newUser"
            app:argType="boolean"/>
    </fragment>
</navigation>